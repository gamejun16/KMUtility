<?xml version="1.0" encoding="utf-8"?>


<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical"
    tools:context="com.example.KMUtility.MainActivity"
    >


    <LinearLayout
        android:id="@+id/topBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#96D2FF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_weight="7"
            android:gravity="center|left"
            android:text="게임모바일공학전공 진민준" />

        <ImageButton
            android:id="@+id/refreshActivity"
            android:layout_width="60sp"
            android:layout_height="60sp"

            android:layout_gravity="center"
            android:background="#96D2FF"
            android:scaleType="fitXY"
            android:src="@drawable/refresh_icon"
            android:tint="#FFFFFF"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="4"
        android:background="#96D2FF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tap_1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="일반"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/tap_2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="학사"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/tap_3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="장학"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/tap_4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="입시"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/tap_5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="모집"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/tap_6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="취업"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/tap_7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#3CB4FF"
                android:backgroundTintMode="add"
                android:text="구매"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:background="#00FF7B7B"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="loading"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#C0C0C0"
                android:textColorLink="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FF7B7B"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:background="#00FF7B7B"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="loading"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#C0C0C0"
                android:textColorLink="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FF7B7B"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:background="#00FF7B7B"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="loading"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#C0C0C0"
                android:textColorLink="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FF7B7B"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:background="#00FF7B7B"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="loading"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#C0C0C0"
                android:textColorLink="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FF7B7B"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:background="#00FF7B7B"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="loading"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#C0C0C0"
                android:textColorLink="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FF7B7B"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"

                android:background="#00FF7B7B"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="loading"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#C0C0C0"
                android:textColorLink="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/centerView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FF7B7B"
                    android:text="TextView"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#FFFFFF"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="150sp"
            android:backgroundTint="#029214"
            android:clickable="true"
            android:visibility="invisible"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            fbutton:srcCompat="@drawable/select" />

        <TextView
            android:id="@+id/fab2text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="160sp"
            android:foregroundTint="#FF0000"
            android:text="장학복지팀"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="80sp"
            android:backgroundTint="#029214"
            android:clickable="true"
            android:visibility="invisible"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            fbutton:srcCompat="@drawable/select" />

        <TextView
            android:id="@+id/fab1text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="90sp"
            android:text="학사팀"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#04B81B"
            android:clickable="true"
            android:rotation="0"
            fbutton:backgroundTint="#FFFFFF"
            fbutton:srcCompat="@drawable/phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFCACA"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/mapActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#46AAFF"
                    android:text="MAP"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/qrActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#6EBEFF"
                    android:text="QR CODE"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/themeActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6EBEFF"
                        android:text="THEME"
                        android:textColor="#FFFFFF"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/themeSelect1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#002AFF"
                            android:backgroundTint="#FF8282"
                            android:text="RED"
                            android:textColor="#FFFFFF"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/themeSelect2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#002AFF"
                            android:backgroundTint="#7291EB"
                            android:text="NAVY"
                            android:textColor="#FFFFFF"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/themeSelect3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#002AFF"
                            android:backgroundTint="#BBBBBB"
                            android:text="GRAY"
                            android:textColor="#FFFFFF"
                            android:visibility="visible" />

                    </LinearLayout>
                </FrameLayout>

                <Button
                    android:id="@+id/ctlActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#46AAFF"
                    android:text="CTL"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</androidx.appcompat.widget.LinearLayoutCompat>